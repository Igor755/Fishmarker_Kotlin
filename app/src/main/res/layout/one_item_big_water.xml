<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/height_one_item"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewWater"
            android:layout_width="170dp"
            android:layout_height="125dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/fon_navigation"/>

        <TextView
            android:id="@+id/textViewWaterName"
            android:layout_width="wrap_content"
            android:text="Name_place"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/layout_margin_start_text"
            android:gravity="center"
            android:textColor="@color/colorBlack" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
