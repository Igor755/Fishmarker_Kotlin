<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments_profile.ProfileFragment"
    tools:ignore="ExtraText">


    <LinearLayout
        android:id="@+id/main_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20sp"
        android:gravity="center">

        <ImageView
            android:id="@+id/photo_user"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/photo_user"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/main_lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/main_lay"
        android:gravity="center">

    <Button
        android:id="@+id/change_photo"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:background="@color/colorPrimary"
        android:text="change photo"
        android:textColor="@color/colorWhite"
        android:textSize="10dp"/>

    </LinearLayout>


    /////////BLOCK NAME


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/name"
        android:layout_below="@+id/main_lay2">

    <TextView
        style="@style/CategoryStyle"
        android:text="Name"
        android:layout_marginLeft="20sp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_name"
            style="@style/EditorFieldStyle"
            android:hint="Name"
            android:inputType="textCapWords"
            android:autofillHints=""
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:longClickable="false"
            android:focusableInTouchMode="false"/>

    </LinearLayout>
    </LinearLayout>

    /////////BLOCK LAST NAME

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/last_name"
        android:layout_below="@+id/name">

        <TextView
            style="@style/CategoryStyle"
            android:text="Last Name"
            android:layout_marginLeft="20sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/edit_last_name"
                style="@style/EditorFieldStyle"
                android:hint="Last Name"
                android:inputType="textCapWords"
                android:autofillHints=""
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:longClickable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>
    </LinearLayout>




    /////////BLOCK LOCATION

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/location"
        android:layout_below="@+id/last_name">

        <TextView
            style="@style/CategoryStyle"
            android:text="@string/Location"
            android:layout_marginLeft="20sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/edit_location"
                style="@style/EditorFieldStyle"
                android:hint="@string/Location"
                android:inputType="textCapWords"
                android:autofillHints=""
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:longClickable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>
    </LinearLayout>


    /////////BLOCK EMAIL

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/email"
        android:layout_below="@+id/location">

        <TextView
            style="@style/CategoryStyle"
            android:text="Email"
            android:layout_marginLeft="20sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/edit_email"
                style="@style/EditorFieldStyle"
                android:hint="@string/Email"
                android:inputType="textCapWords"
                android:autofillHints=""
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:longClickable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>
    </LinearLayout>


    /////////BLOCK TELEPHONE


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/telephone"
        android:layout_below="@+id/email">

        <TextView
            style="@style/CategoryStyle"
            android:text="Telephone"
            android:layout_marginLeft="20sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/edit_telephone"
                style="@style/EditorFieldStyle"
                android:hint="Telephone"
                android:inputType="textCapWords"
                android:autofillHints=""
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:longClickable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>
    </LinearLayout>



    /////////BLOCK preferred type of fishing


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/preferred_type_of_fishing"
        android:layout_below="@+id/telephone">

        <TextView
            style="@style/CategoryStyle"
            android:text="Type of fishing"
            android:layout_marginLeft="20sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/edit_preferred_type_of_fishing"
                style="@style/EditorFieldStyle"
                android:hint="Type of fishing"
                android:inputType="textCapWords"
                android:autofillHints=""
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:longClickable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>
    </LinearLayout>


    /////////BLOCK trophies


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/trophies"
        android:layout_below="@+id/preferred_type_of_fishing">

        <TextView
            style="@style/CategoryStyle"
            android:text="Trophies"
            android:layout_marginLeft="20sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/edit_trophies"
                style="@style/EditorFieldStyle"
                android:hint="Trophies"
                android:inputType="textCapWords"
                android:autofillHints=""
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:longClickable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>
    </LinearLayout>


    /////////BLOCK About Me


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/about_me"
        android:layout_below="@+id/trophies">

        <TextView
            style="@style/CategoryStyle"
            android:text="About Me"
            android:layout_marginLeft="20sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/edit_about_me"
                style="@style/EditorFieldStyle"
                android:hint="About Me"
                android:inputType="textCapWords"
                android:autofillHints=""
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:longClickable="false"
                android:focusableInTouchMode="false"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>