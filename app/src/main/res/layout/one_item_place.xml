<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtnameplace"
                android:textSize="20dp"
                android:text="NamePlaces"
                android:textAppearance="?android:textAppearanceLarge"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtlatitude"
                android:textSize="15dp"
                android:text="Latitude"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_below="@id/txtnameplace"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtlongitude"
                android:textSize="15dp"
                android:text="Longitude"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_below="@id/txtlatitude"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtzoom"
                android:text="Zoom"
                android:textSize="15dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_below="@id/txtlongitude"/>

            <!--    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#8942;"
                    android:id="@+id/txt_menu_places"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/activity_horizontal_margin"/>-->

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/txt_menu_places"
                android:src = "@drawable/delete_place"
                android:background="@color/colorTransparent"
                android:layout_gravity="bottom|end"
                android:layout_alignParentRight="true"
                android:layout_below="@id/txtlatitude"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>